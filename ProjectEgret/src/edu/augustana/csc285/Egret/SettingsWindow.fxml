<BorderPane minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.csc285.Egret.SettingsWindowController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" text="Reset to Default Settings" />
                  <MenuItem fx:id="closeOption" mnemonicParsing="false" onAction="#exitWindow" text="Close" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>
   <center>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Data Preferences">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <RadioButton fx:id="multSamplesOption" layoutX="38.0" layoutY="159.0" mnemonicParsing="false" onAction="#takeMultSamples" text="Average Multiple Samples :">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </RadioButton>
                        <CheckBox fx:id="velocityDataOption" layoutX="237.0" layoutY="60.0" mnemonicParsing="false" onAction="#recordVelocity" prefHeight="47.0" prefWidth="117.0" text="Velocity">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </CheckBox>
                        <CheckBox fx:id="positionDataOption" layoutX="115.0" layoutY="60.0" mnemonicParsing="false" onAction="#recordPosition" prefHeight="48.0" prefWidth="142.0" selected="true" text="Position">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </CheckBox>
                        <Label layoutX="38.0" layoutY="70.0" prefHeight="27.0" prefWidth="82.0" text="Record:">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Spinner fx:id="samplesSelection" layoutX="281.0" layoutY="159.0" onInputMethodTextChanged="#passNumSamples" />
                        <Label layoutX="457.0" layoutY="159.0" text="Samples">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <Text layoutX="44.0" layoutY="230.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Note: Collecting more data samples will result in longer computation times, but will result in more accurate data." wrappingWidth="490.93670654296875">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Text>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Recording Preferences">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Text layoutX="97.0" layoutY="78.0" strokeType="OUTSIDE" strokeWidth="0.0" text="The video you provided has a frame rate of 40 frames/sec">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Text>
                        <Text layoutX="61.0" layoutY="152.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Record data every :">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Text>
                        <TextField fx:id="intervalBox" alignment="CENTER_RIGHT" layoutX="233.0" layoutY="133.0" onInputMethodTextChanged="#updateFrameInterval" text="1" />
                        <Text layoutX="396.0" layoutY="152.0" strokeType="OUTSIDE" strokeWidth="0.0" text="seconds">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Text>
                        <Text layoutX="340.0" layoutY="230.0" strokeType="OUTSIDE" strokeWidth="0.0" text="to">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Text>
                        <Text layoutX="71.0" layoutY="230.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Record data from :">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Text>
                        <TextField fx:id="startTimeBox" alignment="CENTER_RIGHT" layoutX="225.0" layoutY="211.0" onInputMethodTextChanged="#updateStartFrame" prefHeight="26.0" prefWidth="105.0" text="0:00" />
                        <TextField fx:id="endTimeBox" alignment="CENTER_RIGHT" layoutX="372.0" layoutY="211.0" onInputMethodTextChanged="#updateEndFrame" prefHeight="26.0" prefWidth="105.0" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
